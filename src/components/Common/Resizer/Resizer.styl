.resizer
  position: relative;

  &__handle
    top 0
    left 100%
    height 100%
    width 3px
    padding 0 0
    position absolute
    cursor col-resize
    z-index 100
    margin-left 7px

    &_quickview
      margin-left -2px;

    &::before
      top 0
      right 0
      bottom 0
      width 1px
      content ""
      z-index 5
      display block
      background #bdbdbd
      position absolute

    &:hover::before,
    &_resizing::before
      top 0
      bottom 0
      background-color $accent_color
      box-shadow 0 0 0 1px $accent_color
