.space
  display grid
  grid-gap 16px

  &_direction
    &_horizontal
      grid-auto-flow column
      align-items center
      grid-auto-columns max-content

    &_vertical
      grid-auto-flow row
      justify-content center
      grid-auto-rows max-content

  &_size
    &_large
      grid-gap 32px

    &_small
      grid-gap 12px
