.player
  width 100%
  height 32px
  display flex
  min-width 240px
  border-radius 4px
  align-items center
  background-color #fafafa
  box-shadow 0 1px 5px rgba(#000, 0.2)

  &__playback
    width 100%
    height 100%
    display flex
    flex-direction column

  &__controls
    flex 1
    height 27px

  &__play
    width 24px
    height 24px
    display flex
    align-items center
    justify-content center
    color $accent_color

  &__track,
  &__time
    font-size 12px
    color rgba(#000, 0.7)

  &__track
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  &__time
    padding 4px 10px

  &__loading
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
