.label-view
  height 100%
  width 100%
  display flex
  flex-direction column

  &__header
    flex none
    display flex
    min-height 56px
    padding 0 1em
    align-items center
    justify-content space-between

  &__table
    display flex
    flex 200px 0 0
    flex-direction column

  &__content
    flex 1
    display flex
    height calc(100% - 46px)

  &__dataview
    flex 1
    width 100%
    display flex
    min-width 200px
    box-shadow 0 0 0 1px #ccc

  &__lsf-wrapper
    flex 1
    box-sizing border-box
    display flex
    flex-direction column
    min-width 0

    &_mode
      &_explorer
        margin-left 1px
        margin-top: -1px;
        border-top: 1px solid rgba(#000, 0.15);

  &__lsf-container
    width 100%
    height 100%
    display flex
    flex-direction column
    overflow-y auto

    & > div
      --main-bg-color #FAFAFA

      flex 1
      height auto

  &__lsf-toolbar
    height 50px

  &__lsf-content
    flex 1
    overflow auto
    box-sizing border-box
    padding-bottom 50px
